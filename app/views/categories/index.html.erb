 -->

<div id="categories" class="transitions-enabled">
  <% @categories.each do |category| %>
    <div class="box">
      <%= link_to image_tag(category.image.url(:medium)), category %>
      <div class="caption center">
        <h3><%= link_to category.name, category %></h3>
        <p><%= category.desc %></p>
      </div>
      <div class="caption center">
        <%= link_to edit_category_path(category) do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
        <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
      </div>
    </div>
  <% end %>
</div>

