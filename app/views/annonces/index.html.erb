<%= form_tag(annonces_path, :method => "get", class: "navbar-form navbar-right", id: "search-form") do %>
<div class="form-group">
  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Recherche" %>
  <button class="btn btn-default" type="submit">Envoi</i></button>
</div>
<% end %>

<h1>Toutes les annonces</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Cat√©gorie</th>
      <th>Utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.name %></td>
        <td><%= annonce.description %></td>
        <td><%= link_to Category.find(annonce.category_id).name, category_path(annonce.category_id) if annonce.category_id %></td>
        <td><%= annonce.user.name if annonce.user.name %></td>
        <td><%= link_to 'Show', annonce %></td>
        <% if annonce.user == current_user %>
          <td><%= link_to 'Edit', edit_annonce_path(annonce) %></td>
          <td><%= link_to 'Destroy', annonce, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

