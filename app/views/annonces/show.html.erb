<div class="row">
  <script type="text/javascript">

    var map;

    function initialize() {
      var mapOptions = {
        zoom: 15,
        // center: new google.maps.LatLng('<%= @annonce.latitude %>', '<%= @annonce.longitude %>')
        center: new google.maps.LatLng('<%= @annonce.latitude %>', '<%= @annonce.longitude %>')

      };
      map = new google.maps.Map(document.getElementById('map-show-canvas'),
          mapOptions);


      var marqueur = new google.maps.Marker({
      position: new google.maps.LatLng('<%= @annonce.latitude %>', '<%= @annonce.longitude %>'),
      map: map
      });
    


    }

    google.maps.event.addDomListener(window, 'load', initialize);

